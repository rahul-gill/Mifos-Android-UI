<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Mifos.DesignSystem.Component.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/selector_primary_button_background</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAppearance">?attr/mfTypographyButton</item>
        <item name="android:textColor">@color/selector_primary_button_text</item>
    </style>

    <style name="Mifos.DesignSystem.Component.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">@color/selector_outline_button_stroke</item>
        <item name="android:textAppearance">?attr/mfTypographyButton</item>
        <item name="android:textColor">@color/selector_outline_button_text</item>
    </style>

    <style name="Mifos.DesignSystem.Component.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/mfColorText</item>
    </style>

    <style name="Mifos.DesignSystem.Component.ClickableCard" parent="Widget.MaterialComponents.CardView">
        <item name="iconTint">@android:color/black</item>
    </style>
</resources>